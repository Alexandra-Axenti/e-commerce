{{#if editProductForm}}

<h4>Update {{product.name}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="name">Product Name:</label>
      {{input value=name id="name" placeholder=product.name}}
    </div>

    <div class="form-group">
      <label for="brand">Product Brand:</label>
      {{input value=brand id="brand" placeholder=product.brand}}
    </div>

    <div class="form-group">
      <label for="content">Product Description:</label>
      {{input value=content id="content" placeholder=product.content}}
    </div>

    <div class="form-group">
      <label for="image">Product Display URL:</label>
      {{input value=image id="image" placeholder=product.image}}
    </div>

    <div class="form-group">
      <label for="price">Product Price:</label>
      {{input type="number" value=price id="price" placeholder=product.price}}
    </div>

    <div class="form-group">
      <label for="stock">Product Stock Availability:</label>
      {{input type="number" value=stock id="stock" placeholder=product.stock}}
    </div>

    <button {{action 'update' product}}>Save</button>

  </form>
</div>
{{else}}

<button {{action 'editProductForm'}}>Update</button>
{{/if}}
